<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:background="@drawable/recycle_item_color_selector"
                android:orientation="vertical">

    <ImageView
        android:scaleType="centerCrop"
        android:id="@+id/book_cover"
        android:layout_width="50dp"
        android:layout_height="70dp"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginBottom="5dp"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:src="@color/blue"/>

    <TextView
        android:textSize="12sp"
        android:id="@+id/book_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/book_cover"
        android:layout_toEndOf="@+id/book_cover"
        android:text="TextView"/>


    <TextView
        android:textSize="12sp"
        android:id="@+id/book_author"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/book_title"
        android:layout_toEndOf="@+id/book_cover"
        android:text="TextView"/>

    <TextView
        android:textSize="12sp"
        android:id="@+id/book_shortIntro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/book_author"
        android:layout_toEndOf="@+id/book_cover"
        android:singleLine="true"
        android:text="TextView"/>

    <TextView
        android:textSize="12sp"
        android:id="@+id/book_follower"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/book_cover"
        android:layout_toEndOf="@+id/book_cover"
        android:text="TextView"/>

</RelativeLayout>