<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_categories_details"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:clipToPadding="true"
    android:fitsSystemWindows="true"
    tools:context="com.ming.ebook.ehome.activity.CategoriesDetailsActivity">

    <include
        android:id="@+id/categories_details_top"
        layout="@layout/app_topbar"/>

    <RadioGroup
        android:id="@+id/categories_details_rg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <RadioButton
            android:textColor="@drawable/categories_text_seletor"
            android:id="@+id/book_hot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:button="@null"
            android:gravity="center"
            android:checked="true"
            android:textSize="16sp"
            android:text="热门"/>

        <RadioButton
            android:textColor="@drawable/categories_text_seletor"
            android:textSize="16sp"
            android:id="@+id/book_new"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:button="@null"
            android:gravity="center"
            android:text="新书"/>

        <RadioButton
            android:textColor="@drawable/categories_text_seletor"
            android:textSize="16sp"
            android:id="@+id/book_reputation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:button="@null"
            android:gravity="center"
            android:text="好评"/>

        <RadioButton
            android:textColor="@drawable/categories_text_seletor"
            android:textSize="16sp"
            android:id="@+id/book_over"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:button="@null"
            android:gravity="center"
            android:text="完结"/>
    </RadioGroup>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/details_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </android.support.v7.widget.RecyclerView>
</LinearLayout>
